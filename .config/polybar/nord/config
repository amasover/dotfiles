[bar/main]
; require monitor to be connected to load bar
monitor-strict = true
inherit = bar/base
monitor = ${env:MONITOR_MAIN}
modules-right = time
; alsa-switch pulseaudio-tail time calendar
modules-left = ;yadm-checker.sh true
modules-center = ;i3
background = #00000000
bottom = false 
tray-position = none
height = 3%
padding = 1
line-size = 4
line-color = #f00
; radius = 15

; This creates a fake offset (floating bar)
; offset causes i3 windows to overlap with the bar.
; Not specifying border-color makes it transparent.
border-top-size = 20
; border-bottom-size = 20 ; switch top/bottom based on 'bottom=false/true'
border-left-size = 20
border-right-size = 20


[bar/main.top.middle]
